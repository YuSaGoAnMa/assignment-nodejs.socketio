{
    "transpiler": "typescript",
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noLib": false,
        "outDir": "dist"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "./typings/*.d.ts",
        "./node_modules/angular2/typings/*.ts"
    ],
    "files": [
        "./src/tsc/app/temperatureConverter.ts",
        "./src/tsc/app/weatherApp.ts",
        "./src/tsc/app/weatherComp.ts",
        "./src/tsc/bootstrap.ts",
        "./src/tsc/main.ts",
        "./src/tsc/server/routes.ts",
        "./src/tsc/server/serverInstance.ts",
        "./node_modules/angular2/typings/tsd.d.ts"
    ],
    "exclude": []
}
